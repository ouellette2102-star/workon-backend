# ===================================
# RAILWAY PRODUCTION CONFIGURATION
# ===================================
# Copy this file to set up your Railway environment variables
# DO NOT commit real secrets to git!

# ====================
# DATABASE (REQUIRED)
# ====================
# Railway PostgreSQL plugin will auto-generate this
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://postgres:password@hostname.railway.app:5432/railway"

# ====================
# JWT (REQUIRED)
# ====================
# Generate strong secrets (min 32 chars):
# openssl rand -base64 32
JWT_SECRET="CHANGE-ME-strong-secret-min-32-chars-for-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="CHANGE-ME-another-strong-secret-for-refresh-tokens"
JWT_REFRESH_EXPIRES_IN="30d"

# ====================
# CLERK (REQUIRED if using Clerk auth)
# ====================
# Get from: https://dashboard.clerk.com/
CLERK_SECRET_KEY="sk_live_your-clerk-secret-key-here"
CLERK_PUBLISHABLE_KEY="pk_live_your-clerk-publishable-key"

# ====================
# STRIPE (REQUIRED if using payments)
# ====================
# Get from: https://dashboard.stripe.com/
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"

# ====================
# APPLICATION
# ====================
NODE_ENV="production"
# Railway auto-sets PORT, but fallback is 3001
PORT=3001
API_PREFIX="api/v1"

# ====================
# CORS (REQUIRED)
# ====================
# Add your Railway domain + FlutterFlow domains (comma-separated)
# Example: https://workon-production.up.railway.app,https://yourapp.flutterflow.app
FRONTEND_URL="https://yourapp.flutterflow.app"
CORS_ORIGIN="https://workon-production.up.railway.app,https://yourapp.flutterflow.app"

# ====================
# SWAGGER (OPTIONAL)
# ====================
# Set to 'true' to enable Swagger in production at /api/docs
# Useful for FlutterFlow API testing, but consider security
ENABLE_SWAGGER_PROD="true"

# ====================
# SENTRY (OPTIONAL)
# ====================
# Error tracking - get from https://sentry.io/
SENTRY_DSN=""
SENTRY_ENVIRONMENT="production"

# ====================
# RATE LIMITING
# ====================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ====================
# LOGGING
# ====================
LOG_LEVEL="info"

# ====================
# SECURITY
# ====================
BCRYPT_ROUNDS=12



