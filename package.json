{
  "name": "workon-backend",
  "version": "1.0.0",
  "description": "Backend API production-ready pour WorkOn",
  "author": "WorkOn Team",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:railway": "node scripts/railway-start.js",
    "railway:migrate": "node scripts/railway-migrate.js",
    "railway:release": "node scripts/railway-release.js",
    "worker:notifications": "node dist/workers/notification-worker.js",
    "worker:notifications:dev": "ts-node src/workers/notification-worker.ts",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false node ./node_modules/eslint/bin/eslint.js --config .eslintrc.js --resolve-plugins-relative-to . \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset:local": "echo '⚠️ LOCAL ONLY - This will DELETE all data!' && prisma migrate reset",
    "migrate:prod": "prisma migrate deploy",
    "seed": "ts-node prisma/seed.ts",
    "seed:dev": "ts-node prisma/seed.dev.ts",
    "prisma:generate": "prisma generate",
    "prisma:validate": "prisma validate",
    "prisma:db:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "db:status": "prisma migrate status",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:safe": "npm run db:check-migration && npm run db:migrate:deploy",
    "db:check-migration": "ts-node ./scripts/check-migration-safety.ts",
    "db:validate-seed": "ts-node ./scripts/validate-seed.ts",
    "db:seed:safe": "npm run db:validate-seed && npm run seed",
    "db:studio": "prisma studio",
    "db:validate": "prisma validate",
    "db:generate": "prisma generate",
    "env:generate": "node scripts/generate-env.js",
    "check:env": "ts-node ./scripts/check-env.ts || node ./scripts/check-env.ts",
    "smoke:contracts": "ts-node ./scripts/check-api-contracts.ts",
    "smoke:local": "powershell -ExecutionPolicy Bypass -File ./scripts/smoke_backend.ps1",
    "smoke:ci": "bash ./scripts/smoke_backend.sh",
    "smoke:all": "npm run smoke:contracts && npm run smoke:local",
    "qa:gate": "npm run lint && npm run build && npm run test && npm run smoke:contracts"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@nestjs/common": "10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "10.2.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/swagger": "7.1.15",
    "@nestjs/throttler": "^5.2.0",
    "@prisma/client": "^6.0.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^7.91.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.2.0",
    "nest-winston": "^1.9.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^6.0.0",
    "reflect-metadata": "0.1.14",
    "rxjs": "^7.8.1",
    "stripe": "^17.7.0",
    "swagger-ui-express": "4.6.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "10.2.7",
    "@playwright/test": "^1.49.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 30,
        "statements": 30,
        "functions": 31,
        "branches": 26
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
