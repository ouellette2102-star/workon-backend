# ============================================
# WorkOn Backend - STAGING Environment
# ============================================
# ⚠️ UTILISER UNIQUEMENT DES CLÉS TEST ⚠️
# ❌ NE JAMAIS utiliser de clés sk_live_* ou pk_live_*
# ============================================

# Database (fournie par Railway PostgreSQL)
DATABASE_URL="postgresql://postgres:xxx@xxx.railway.internal:5432/railway?schema=public"

# Environment - IMPORTANT: utiliser "staging" et non "production"
NODE_ENV="staging"

# Server
PORT=8080

# ============================================
# JWT Authentication
# ============================================
# ⚠️ Utiliser des secrets DIFFÉRENTS de la production
JWT_SECRET="staging-jwt-secret-change-me-min-32-characters-long"
JWT_EXPIRES_IN="1d"
JWT_REFRESH_SECRET="staging-refresh-secret-change-me-min-32-characters"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# Clerk (optionnel - TEST KEYS ONLY)
# ============================================
CLERK_SECRET_KEY="sk_test_YOUR_CLERK_TEST_KEY_HERE"

# ============================================
# Stripe (TEST KEYS ONLY - https://dashboard.stripe.com/test/apikeys)
# ============================================
STRIPE_SECRET_KEY="sk_test_YOUR_STRIPE_TEST_KEY_HERE"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_TEST_WEBHOOK_SECRET_HERE"
STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_STRIPE_TEST_KEY_HERE"

# ============================================
# Security
# ============================================
SIGNED_URL_SECRET="staging-signed-url-secret-min-32-chars"
BCRYPT_ROUNDS=10

# ============================================
# CORS
# ============================================
# URL de votre frontend staging (Vercel, etc.)
CORS_ORIGIN="https://workon-staging.vercel.app"
FRONTEND_URL="https://workon-staging.vercel.app"

# ============================================
# Features Flags
# ============================================
# Activer Swagger en staging
ENABLE_SWAGGER_PROD="true"

# Debug des variables d'environnement (désactiver après debug)
DEBUG_ENV="0"

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED="1"
RATE_LIMIT_TTL="60"
RATE_LIMIT_LIMIT="100"

# ============================================
# Logging
# ============================================
LOG_LEVEL="info"

# ============================================
# Sentry (optionnel)
# ============================================
SENTRY_DSN=""
SENTRY_ENVIRONMENT="staging"

# ============================================
# API Configuration
# ============================================
API_PREFIX="api/v1"

